<?xml version="1.0" encoding="UTF-8"?>
<content-type xmlns="urn:enonic:xp:model:1.0">
  <display-name>Redirect</display-name>
  <description>Redirects to another content</description>
  <super-type>base:structured</super-type>
  <form>
    <option-set name="redirectOptionSet">
      <label>Redirect</label>
      <occurrences minimum="1" maximum="1"/>
      <options minimum="1" maximum="1">
        <option name="contentOption">
          <label>Redirect to content</label>
          <items>
            <input name="contentId" type="ContentSelector">
              <label>Target content</label>
              <occurrences minimum="1" maximum="1"/>
              <config>
              </config>
            </input>
          </items>
        </option>
        <option name="pathOption">
          <label>Redirect to path</label>
          <items>
            <input name="path" type="TextArea">
              <label>Target path</label>
              <occurrences minimum="1" maximum="1"/>
            </input>
          </items>
        </option>
      </options>
    </option-set>

  </form>
</content-type>
